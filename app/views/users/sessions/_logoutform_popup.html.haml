- if current_user
  .logoutform.logoutform-popup
    .profile-link
      %a{href: user_path(current_user)}
        Mein Profil
    .logout
      = link_to "Abmelden", destroy_user_session_path, method: :delete
    = link_to gravatar_image_tag(current_user.email, class: "user_gravatar", gravatar: { default: :identicon, size: 48 }), user_path(current_user)
